<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_credit_type"
        android:textStyle="bold"
        style="@style/TextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Общие условия"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_header_cost"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Выплата:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_credit_type" />

    <TextView
        android:id="@+id/tv_cost"
        style="@style/TextStyle.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_header_cost"
        app:layout_constraintTop_toBottomOf="@+id/tv_credit_type"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_header_period"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Период:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_cost" />

    <TextView
        android:id="@+id/tv_period"
        android:layout_width="0dp"
        style="@style/TextStyle.Small"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_period"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="@+id/tv_cost"
        app:layout_constraintTop_toBottomOf="@+id/tv_cost"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_header_rate"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Ставка:"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="@dimen/app_margin"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_period" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="0dp"
        style="@style/TextStyle.Small"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_period"
        app:layout_constraintTop_toBottomOf="@+id/tv_period"
        android:paddingBottom="@dimen/app_margin"
        app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>